<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_academy_tasks" model="ir.actions.act_window">
        <field name="name">Academy Tasks</field>
        <field name="res_model">edu.task</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    
    <record id="action_academy_task_stages" model="ir.actions.act_window">
        <field name="name">Task Stages</field>
        <field name="res_model">academy.task.stage</field>
        <field name="view_mode">list,form</field>
        <field name="view_id"/>
    </record>

    
    <record id="view_task_list" model="ir.ui.view">
        <field name="name">edu.task.list</field>
        <field name="model">edu.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="deadline"/>
                <field name="priority"/>
                <field name="stage_id"/>
                <field name="is_overdue"/>
            </list>
        </field>
    </record>

    
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">edu.task.form</field>
        <field name="model">edu.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="deadline"/>
                        <field name="teacher_id"/>
                        <field name="is_overdue"/>
                        <field name="priority"/>
                        <field name="stage_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<record id="view_task_stage_list" model="ir.ui.view">
    <field name="name">academy.task.stage.list</field>
    <field name="model">academy.task.stage</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="sequence"/>
        </list>
    </field>
</record>

    
    <record id="view_task_stage_form" model="ir.ui.view">
        <field name="name">academy.task.stage.form</field>
        <field name="model">academy.task.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

 

</odoo>