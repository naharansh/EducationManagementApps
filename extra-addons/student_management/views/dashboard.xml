<odoo>
    <record id="view_education_dashboard_tree" model="ir.ui.view">
        <field name="name">education.dashboard.list</field>
        <field name="model">education.dashboard</field>
        <field name="arch" type="xml">
            <list>
                <field name="total_students"/>
                <field name="active_classes"/>
                <field name="fees_pending_students"/>
                <field name="total_outstanding"/>
                <field name="todays_classes"/>
                <field name="todays_attendance"/>
                <field name="abesent"/>                

            </list>
        </field>
    </record>

    <record id="view_education_dashboard_graph" model="ir.ui.view">
        <field name="name">education.dashboard.graph</field>
        <field name="model">education.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Attendance and Fees Overview" type="bar">
                <field name="total_students" type="row"/>
                <field name="active_classes" type="row"/>
                <field name="fees_pending_students" type="row"/>
                <field name="total_outstanding" type="row"/>
                <field name="todays_attendance" type="row"/>
            </graph>
        </field>
    </record>




    <record id="action_education_dashboard" model="ir.actions.act_window">
        <field name="name">Education Dashboard</field>
        <field name="res_model">education.dashboard</field>
        <field name="view_mode">list,graph</field>
        <field name="target">current</field>
    </record>

   
</odoo>