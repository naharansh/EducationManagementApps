<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_student_list" model="ir.actions.act_window">
        <field name="name">Student List by Class</field>
        <field name="res_model">student.model</field>
        <field name="view_mode">list,pivot</field>
    </record>
    <record id="action_class_strength" model="ir.actions.act_window">
        <field name="name">Class Strength Report</field>
        <field name="res_model">batch.class</field>
        <field name="view_mode">pivot,graph</field>
    </record>
    <record id="view_class_strength_graph" model="ir.ui.view">
        <field name="name">batch.class.strength.graph</field>
        <field name="model">batch.class</field>
        <field name="arch" type="xml">
            <graph type="pie" string="Class Strength Report">
                <field name="name" type="row"/>
                <field name="student_count" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="action_daily_class_report" model="ir.actions.act_window">
        <field name="name">Daily Class Report</field>
        <field name="res_model">edu.daily.record</field>
        <field name="view_mode">list,form</field>
    </record>
    <record id="action_fee_outstanding" model="ir.actions.act_window">
        <field name="name">Fee Outstanding Report</field>
        <field name="res_model">edu.fee.due</field>
        <field name="view_mode">list,pivot</field>
        <field name="domain">[('state','=','outstanding')]</field>
    </record>
    <record id="action_fee_statement" model="ir.actions.act_window">
        <field name="name">Fee Statement Per Student</field>
        <field name="res_model">edu.fee.due</field>
        <field name="view_mode">list,form</field>
    </record>
<record id="view_student_attendance_graph" model="ir.ui.view">
    <field name="name">edu.monthly.attendence.line.graph</field>
    <field name="model">edu.monthly.attendence.line</field>
    <field name="arch" type="xml">
        <graph string="Attendance Graph" type="bar">
            <!-- Row: group by class -->
            <field name="report_id" type="row"/> <!-- or use report_id.class_id -->
            
            <!-- Measures: numeric fields -->
            <field name="present_days" type="measure"/>
            <field name="absent_days" type="measure"/>
            <field name="class_capacity" type="measure"/>
        </graph>
    </field>
</record>

    

    <!-- Action to Open Graph -->
 <record id="view_fee_dues_payments_graph" model="ir.ui.view">
    <field name="name">edu.fee.due.graph</field>
    <field name="model">edu.fee.due</field>
    <field name="arch" type="xml">
        <graph string="Fee Dues vs Payments" type="bar">
            <field name="paid_amount" type="measure"/>
            <field name="balance_amount" type="measure"/>
            <field name="student_id" type="row"/>
        </graph>
    </field>
</record>
<record id="action_fee_dues_payments_graph" model="ir.actions.act_window">
    <field name="name">Fee Dues vs Payments</field>
    <field name="res_model">edu.fee.due</field>
    <field name="view_mode">graph</field>
    <field name="view_id" ref="view_fee_dues_payments_graph"/>
</record>

<record id="view_teacher_timetable_pivot" model="ir.ui.view">
    <field name="name">edu.teacher.timetable.pivot</field>
    <field name="model">edu.class.daily</field>
    <field name="arch" type="xml">
        <pivot string="Teacher-wise Timetable">
            <!-- Grouping dimensions -->
            <field name="teacher_id" type="row"/>
            <field name="date" type="col"/>
            <field name="subject_id" type="col"/>
            
            <!-- Measures -->
            <field name="duration" type="measure"/>
        </pivot>
    </field>
</record>
<record id="view_teacher_timetable_graph" model="ir.ui.view">
    <field name="name">edu.teacher.timetable.graph</field>
    <field name="model">edu.class.daily</field>
    <field name="arch" type="xml">
        <graph string="Teacher Workload Graph" type="bar">
            <!-- Group by teacher -->
            <field name="teacher_id" type="row"/>

            <field name="duration" type="measure"/>
        </graph>
    </field>
</record>
<record id="action_teacher_timetable_report" model="ir.actions.act_window">
    <field name="name">Teacher Timetable Report</field>
    <field name="res_model">edu.class.daily</field>
    <field name="view_mode">pivot,graph</field>
    <field name="view_id" ref="view_teacher_timetable_pivot"/>
</record>
<record id="action_student_attendance_graph" model="ir.actions.act_window">
    <field name="name">Monthly Attendance Report</field>
    <field name="res_model">edu.monthly.attendence.line</field>
    <field name="view_mode">graph,pivot</field>
    <field name="view_id" ref="view_student_attendance_graph"/>
</record>




</odoo>